{
  "version": 2,
  "buildCommand": "npx tsx script/build.ts",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "functions": {
    "api/index.ts": {
      "runtime": "vercel-php@0.7.2"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1",
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
}
